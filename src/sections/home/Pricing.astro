---
export const pricing = [
  {
    title: "Starter",
    price: "€300",
    description: "Simple one-page website for a small business or personal service.",
    features: ["modern design", "mobile friendly", "contact form", "basic SEO setup"],
    timeline: "Typical delivery: 2–3 days",
    popular: false,
  },
  {
    title: "Business",
    price: "€600",
    description: "Full business website designed to attract clients and work with advertising.",
    features: [
      "unique design",
      "mobile-first layout",
      "speed optimization",
      "SEO structure",
      "analytics setup",
    ],
    timeline: "Typical delivery: 5–7 days",
    popular: true,
  },
  {
    title: "Pro",
    price: "€1200+",
    description: "Multi-page website or complex project with custom functionality.",
    features: [
      "multiple pages",
      "advanced SEO",
      "integrations",
      "performance optimization",
      "long-term scalability",
    ],
    timeline: "Timeline depends on project scope",
    popular: false,
  },
];
---

<section id="pricing" class="relative py-28">
  <div class="container space-y-6">
    <div class="max-w-3xl">
      <h2 class="text-5xl font-black">Pricing</h2>
      <p class="mt-3 text-neutral-400">
        Clear fixed pricing so you understand the budget before contacting me.
      </p>
    </div>

    <div class="grid gap-6 lg:grid-cols-3">
      {
        pricing.map((plan) => (
          <div
            class={`flex flex-col justify-between rounded-xl p-7 transition duration-300 hover:-translate-y-1 ${
              plan.popular
                ? "border-primary/40 bg-primary/10 relative border shadow-[0_0_60px_rgba(0,255,170,0.15)]"
                : "border border-neutral-100/5 bg-neutral-900/50 hover:border-neutral-100/20"
            }`}
          >
            {plan.popular && (
              <div class="bg-primary absolute -top-3 left-1/2 -translate-x-1/2 rounded-full px-4 py-1 text-xs font-bold text-black">
                Most popular
              </div>
            )}

            <div class="space-y-4">
              <h3 class="text-2xl font-bold">{plan.title}</h3>
              <p class="text-4xl font-black">{plan.price}</p>

              <p class={plan.popular ? "text-neutral-300" : "text-neutral-400"}>
                {plan.description}
              </p>

              <ul
                class={
                  plan.popular
                    ? "space-y-2 text-sm text-neutral-200"
                    : "space-y-2 text-sm text-neutral-300"
                }
              >
                {plan.features.map((f) => (
                  <li>• {f}</li>
                ))}
              </ul>

              <p class={plan.popular ? "text-sm text-neutral-300" : "text-sm text-neutral-400"}>
                {plan.timeline}
              </p>
            </div>

            <a
              href="#contacts"
              class={`mt-8 inline-block rounded-md px-6 py-3 text-center font-semibold transition duration-300 ${
                plan.popular
                  ? "bg-primary text-black hover:brightness-110 active:brightness-110"
                  : "border border-neutral-100/10 hover:bg-neutral-100 hover:text-black active:bg-neutral-100 active:text-black"
              }`}
            >
              Discuss project
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
