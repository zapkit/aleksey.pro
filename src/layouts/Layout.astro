---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const {
  title = "Aleksey • Web Developer | High-Performance Business Websites & Landing Pages",
  description = "I build fast, modern business websites and landing pages that increase leads and conversions. Performance-optimized, SEO-friendly, and fully managed — from idea to launch.",
  image = "/me.webp",
  url = "https://www.aleksey.pro/",
  dark_favicon = "/dark-favicon.svg",
  light_favicon = "/light-favicon.svg",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={url} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Favicons -->
    <link rel="icon" href={light_favicon} media="(prefers-color-scheme: light)" />
    <link rel="icon" href={dark_favicon} media="(prefers-color-scheme: dark)" />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
